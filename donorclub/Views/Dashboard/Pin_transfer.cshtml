@model donorclub.Models.PINDETAILSMODEL

@{
    ViewBag.Title = "Pin_transfer";
    Layout = "~/Views/Shared/User_Layout.cshtml";
}

<!--#INCLUDE file="head.asp"-->
<!--start page wrapper -->
<div class="page-wrapper">
    <div class="page-content">
        <!--breadcrumb-->
        <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-5">
            <div class="ps-3">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb mb-0 p-0">
                        <li class="breadcrumb-item">
                            <a href="javascript:;"><i class="bx bx-home-alt"></i> Dashboard</a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">Provide Help</li>
                    </ol>
                </nav>
            </div>
        </div>
        <!--end breadcrumb-->

        <div class="row">
            <div class="col-xl-6 mx-auto">
                <div class="card tran-bg">
                    <div class="card-header px-4 py-3 border-bottom">
                        <h5 class="mb-0">Pin Transfer</h5>
                    </div>
                    <div class="card-body p-4">
                        @if (TempData["TransferPinAlert"] != null)
                        {
                            if (TempData["TransferPinAlert"].ToString() != "1")
                            {
                                <div class="widget-list">
                                    <div class="row">
                                        <div class="col-sm-12">
                                            <div class="error-box">
                                                <div class="alert alert-success">@TempData["TransferPinAlert"]</div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                            else
                            {
                                <div class="widget-list">
                                    <div class="row">
                                        <div class="col-sm-12">
                                            <div class="error-box">
                                                <div class="alert alert-success">Pin transfer Successfully</div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                        @using (Html.BeginForm("Pin_transfer", "Dashboard", FormMethod.Post, new { enctype = "multipart/form-data" }))
                        {
                            @Html.ValidationSummary(true)

                    <div class="col-md-12">
                        <label for="bsValidation9" class="form-label">Amount</label>
                        @Html.DropDownListFor(model => model.amount,
                                new List<SelectListItem> {
                                  new SelectListItem {Value="",Text="Select Amount" },
                                  new SelectListItem {Value="100",Text="₹ 100" },
                              //     new SelectListItem {Value="600",Text="₹ 600" }
                                  }, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.amount)

                    </div>
                    <div class="col-md-12">
                        <label for="bsValidation3" class="form-label">Pins Available</label>
                        @Html.TextBoxFor(model => model.Available_Pin, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Available_Pin)

                    </div>
                    <div class="col-md-12">
                        <label for="bsValidation3" class="form-label">User Id</label>
                        @Html.TextBoxFor(model => model.username, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.username)
                    </div>
                    <div class="col-md-12">
                        <label for="bsValidation3" class="form-label">Quantity</label>
                        @Html.TextBoxFor(model => model.Quantiy, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Quantiy)

                    </div>


                            <div class="col-md-12">
                                <div class="d-md-flex d-grid align-items-center gap-3">
                                    <!-- <button type="submit" class="btn btn-white px-4">Submit</button> -->
                                    @*<button type="reset" class="btn btn-light px-4">Submit</button>*@
                                    <button type="submit" class="btn btn-light px-4">Transfer</button>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
        <!--end row-->




    </div>
</div>
<!--end page wrapper -->
<!--start overlay-->
<div class="overlay toggle-icon"></div>
<!--end overlay-->
<!--Start Back To Top Button--> <a href="javaScript:;" class="back-to-top"><i class='bx bxs-up-arrow-alt'></i></a>
<!--End Back To Top Button-->
<!--#INCLUDE file="foot.asp"-->
