@model IEnumerable<donorclub.Models.ProvideHelpModel>

@{
    ViewBag.Title = "ProvideHistory";
    Layout = "~/Views/Shared/User_Layout.cshtml";
}
<!--#INCLUDE file="head.asp"-->
<!--start page wrapper -->
<div class="page-wrapper">
    <div class="page-content">
        <!--breadcrumb-->
        <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
            <div class="ps-3">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb mb-0 p-0">
                        <li class="breadcrumb-item">
                            <a href="javascript:;"><i class="bx bx-home-alt"></i> Dashboard</a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">Provide History</li>
                    </ol>
                </nav>
            </div>
        </div>
        <!--end breadcrumb-->
        <h6 class="mb-0 text-uppercase">Provide History</h6>
        <hr />
        <div class="card bg-dark">
            <div class="card-body">
                <div class="table-responsive">
                    <table id="example" class="table table-striped table-bordered" style="width:100%">
                        <thead>
                            <tr>
                                <th>Sr.No.</th>
                                <th>PH No.</th>
                                <th>Date</th>
                                <th>Link Type</th>
                                <th>Amount (Paid)</th>
                                <th>Status</th>
                            </tr>
                        </thead>

                        <tbody>
                            @{ int rows = 0;}
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@(rows = rows + 1)</td>
                                    <td>  @item.commit_no</td>

                                    <td>
                                        @if (!string.IsNullOrEmpty(item.ttime))
                                        {
                                            <span>
                                                @Convert.ToDateTime(item.ttime).ToString("dd/MM/yyyy hh:mm:ss tt")
                                            </span>
                                        }
                                    </td>
                                    <td>  @item.LinkType</td>
                                    <td>₹ @item.amount</td>
                                    <td>@item.Provide_Status</td>
                                </tr>
                            }

                        </tbody>


                    </table>
                </div>
            </div>
        </div>


    </div>
</div>
<!--end page wrapper -->
<!--start overlay-->
<div class="overlay toggle-icon"></div>
<!--end overlay-->
