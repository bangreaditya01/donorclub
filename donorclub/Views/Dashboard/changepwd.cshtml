@model donorclub.Models.ChangePasswordModel
@using LudoFoundation_app.CommanFunction
@{
    UserInfo userInfo = Common.CurrentUserInfo;

    ViewBag.Title = "changepwd";
    Layout = "~/Views/Shared/User_Layout.cshtml";
}

<!--#INCLUDE file="head.asp"-->
<!--start page wrapper -->
<div class="page-wrapper">
    <div class="page-content">
        <!--breadcrumb-->
        <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-5">
            <div class="ps-3">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb mb-0 p-0">
                        <li class="breadcrumb-item">
                            <a href="javascript:;"><i class="bx bx-home-alt"></i> Dashboard</a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">Profile</li>
                    </ol>
                </nav>
            </div>
        </div>
        <!--end breadcrumb-->

        <div class="row">
            <div class="col-xl-6 mx-auto">
                <div class="card tran-bg">
                    <div class="card-header px-4 py-3 border-bottom">
                        <h5 class="mb-0">Change Password</h5>
                    </div>
                    <div class="card-body p-4">

                        @if (TempData["ProfileAlert"] != null)
                        {
                            <div class="widget-list">
                                <div class="row">
                                    <div class="col-sm-12">
                                        <div class="error-box">
                                            <div class="alert alert-success">@TempData["ProfileAlert"]</div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }


                        @using (Html.BeginForm("changepwd", "Dashboard", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
                        {
                            <div class="col-md-12">
                                <label for="bsValidation3" class="form-label">Old Password</label>
                                @Html.PasswordFor(model => model.OldPass, new { @onkeypress = "return isPassword(event);", @class = "form-control", @placeholder = " Old Password", @style = "color:white;font-size: 15px;" })
                                @Html.ValidationMessageFor(m => m.OldPass, "", new { @style = "color:red;" })
                                <div class="invalid-feedback">
                                    Please enter you Old Password.
                                </div>
                            </div>
                            <div class="col-md-12">
                                <label for="bsValidation4" class="form-label">New Password</label>
                                @Html.PasswordFor(model => model.NewPass, new { @onkeypress = "return isPassword(event);", @class = "form-control", @placeholder = " Password", @style = "color:white;font-size: 15px;" })
                                @Html.ValidationMessageFor(m => m.NewPass, "", new { @style = "color:red;" })
                                <div class="invalid-feedback">
                                    Please enter you New Password.
                                </div>
                            </div>
                            <div class="col-md-12">
                                <label for="bsValidation5" class="form-label">Re-Type New Password</label>
                                @Html.PasswordFor(model => model.ConfirmNewPass, new { @onkeypress = "return isPassword(event);", @class = "form-control", @placeholder = "Confirm Password", @style = "color:white;font-size: 15px;" })
                                @Html.ValidationMessageFor(m => m.ConfirmNewPass, "", new { @style = "color:red;" })
                                <div class="invalid-feedback">
                                    Please enter you Re-Type New Password.
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="d-md-flex d-grid align-items-center gap-3">
                                    <!-- <button type="submit" class="btn btn-white px-4">Submit</button> -->
                                    @*<button type="reset" class="btn btn-light px-4">Submit</button>*@
                                </div>
                                <br />
                                <div class="box-footer">
                                    <button type="submit" class="btn btn-light px-4" value="edit-Password" name="edit">Submit</button>
                                </div>
                            </div>
                                }
                            </div>
                </div>
            </div>
        </div>
        <!--end row-->




    </div>
</div>
<!--end page wrapper -->
<!--start overlay-->
<div class="overlay toggle-icon"></div>
<!--end overlay-->
<!--Start Back To Top Button--> <a href="javaScript:;" class="back-to-top"><i class='bx bxs-up-arrow-alt'></i></a>
